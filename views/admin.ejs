<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h2 class="mt-5">Admin Dashboard</h2>
    <a href="/auth/logout" class="btn btn-danger">Logout</a>
    <h4 class="mt-4">All Projects</h4>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Project Title</th>
          <th scope="col">Assigned To</th>
          <th scope="col">Status</th>
          <th scope="col">Progress</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% projects.forEach(project => { %>
          <tr>
            <td><%= project.title %></td>
            <td><%= project.assignedTo.username %></td>
            <td><%= project.status %></td>
            <td><%= project.progress %>%</td>
            <td>
              <a href="/project/<%= project._id %>" class="btn btn-info">View</a>
              <form action="/project/<%= project._id %>" method="POST" style="display:inline-block;">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this project?')">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
